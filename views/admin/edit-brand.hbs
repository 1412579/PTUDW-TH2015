<div class="col-md-12 row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                      <h3 class="box-title">Sửathương hiệu mới</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" enctype="multipart/form-data" method="post" action="">
                      <div class="box-body">
                        <div class="form-group">
                          <label for="exampleInputEmail1">ID</label>
                          <input type="text" class="form-control" value="{{brand.id}}" disabled>
                          <input type="hidden" name="id" value="{{brand.id}}">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Chọn các loại sản phẩm</label>
                          <select multiple class="form-control" name="cate[]">
                              {{{catelist}}}
                            </select>
                        </div>
                        
                        <div class="form-group">
                          <label for="exampleInputEmail1">Tên thương hiệu</label>
                          <input type="text" value="{{brand.name}}" name="name" class="form-control" id="exampleInputEmail1" placeholder="Nhập tên thương hiệu">
                        </div>
                        {{#if brand.image_brand}}
                        <div class="form-group">
                            <label for="exampleInputFile">Ảnh thumbnail hiện tại</label>
                            <br>
                            <img src="{{brand.image_brand}}" alt="">
                            <input type="hidden" name="currentImg" value="{{brand.image_brand}}">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputFile">Chọn lại thumbnail thương hiệu</label>
                            <input name="brandimg" type="file" id="exampleInputFile">
                            <p class="help-block">Kích thước chuẩn 160x160.</p>
                          </div>
                        {{else}}
                        <div class="form-group">
                            <label for="exampleInputFile">Ảnh thumbnail thương hiệu</label>
                            <input name="brandimg" type="file" id="exampleInputFile">
                            <p class="help-block">Kích thước chuẩn 160x160.</p>
                          </div>
                        {{/if}}
                        
                        <div class="form-group">
                          <label for="exampleInputPassword1">Friendly URL</label>
                          <input type="text" value="{{brand.alias}}" name="slug" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên URL mong muốn">
                          <small>Nếu không nhập hệ thống tự động tạo</small>
                        </div>
                    
                           <div class="form-group">
                              <label class=" control-label">Mô tả thương hiệu</label>
                              
                                <textarea name="description" class="textarea" placeholder="Thông tin mô tả thương hiệu" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{brand.description}}</textarea>
                                  <small>Ghi chú để nhân viên không thêm nhầm</small>
                            </div> 
                      </div>
                      <!-- /.box-body -->
        
                      <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Sửa thương hiệu</button>
                      </div>
                    </form>
                  </div>
            </div>
