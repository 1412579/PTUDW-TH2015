<div class="col-md-12">
  <div class="row">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Danh sách đơn đặt hàng</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
          <div class="row">
            <div class="col-sm-6"></div>
            <div class="col-sm-6"></div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>
                  <tr role="row">
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Mã đơn hàng</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Tên khách hàng</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Số điện thoại</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Trạng thái</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Tổng tiền</th>
                    <th rowspan="1" colspan="1">Thời gian đặt</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each orders}}
                  <tr role="row" class="even">
                    <td class="sorting_1">{{this.orderid}}</td>
                    <td>{{this.username}}</td>
                    <td>{{this.userphone}}</td>
                    <td>
                      {{#ifCond statusid '==' 1}}
                      <span class="label label-success">Đã giao</span>
                      {{/ifCond}}
                      {{#ifCond statusid '==' 2}}
                          <span class="label label-danger">Chưa giao</span>
                      {{/ifCond}}
                      {{#ifCond statusid '==' 3}}
                          <span class="label label-primary">Đang giao</span>
                      {{/ifCond}}
                    </td>
                    <td>{{this.total}}</td>
                    <td>{{dateFormat this.timeorder}}</td>
                    <td>
                      <a href="/admin/order/detail" class="label label-success">Sửa</button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
                <tfoot>
                  <tr>
                    <th rowspan="1" colspan="1">Mã đơn hàng</th>
                    <th rowspan="1" colspan="1">Tên khách hàng</th>
                    <th rowspan="1" colspan="1">số điện thoại</th>
                    <th rowspan="1" colspan="1">Trạng thái</th>
                    <th rowspan="1" colspan="1">Tổng tiền</th>
                    <th rowspan="1" colspan="1">Thời gian đặt</th>
                    <th rowspan="1" colspan="1">Thao tác</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>