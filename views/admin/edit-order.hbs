<div class="col-md-12">
              <div class="row">
                      <div class="box box-primary">
                        {{#if message}}
                          <div class="alert alert-success">{{message}}</div>
                      {{/if}}
                          <div class="box-header with-border">
                            <h3 class="box-title">Thông tin đơn hàng</h3>
                          </div>
                          <!-- /.box-header -->
                          <!-- form start -->
                          <form role="form" action="" method="POST">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mã đơn đặt hàng</label>
                                    <input disabled type="text" value="{{orderdetail.orderid}}" class="form-control" id="exampleInputEmail1" placeholder="">
                                  </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Tên khách hàng</label>
                                <input disabled type="text" value="{{orderdetail.username}}" class="form-control" id="exampleInputEmail1" placeholder="">
                              </div>
                              <div class="form-group">
                                <label for="exampleInputPassword1">Số điện thoại</label>
                                <input disabled type="number" value="{{orderdetail.userphone}}" class="form-control" id="exampleInputPassword1" placeholder="">
                              </div>
                              <div class="form-group">
                                <label for="exampleInputPassword1">Ngày đặt</label>
                                <input disabled type="text" value="{{dateFormat orderdetail.timeorder}}" class="form-control" id="exampleInputPassword1" placeholder="">
                              </div>
                              <div class="form-group">
                                  <label class=" control-label">Địa chỉ giao hàng</label>
                                  
                                    <textarea name="description" class="textarea" placeholder="" style="width: 100%; height: 50px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{orderdetail.useraddress}}</textarea>
                                      
                                </div>
                                {{!-- <div class="form-group">
                                    <label class=" control-label">Ghi chú đơn hàng</label>
                                      <textarea name="description" class="textarea" placeholder="" style="width: 100%; height: 50px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                  </div> --}}
                                  
                                  <div class="form-group">
                                      <label style="font-size: 18px;"
                                      {{#ifCond orderdetail.statusid '==' 1}}
                                      class="label label-success"
                                      {{/ifCond}}
                                      {{#ifCond orderdetail.statusid '==' 2}}
                                      class="label label-danger"
                                      {{/ifCond}}
                                      {{#ifCond orderdetail.statusid '==' 3}}
                                      class="label label-primary"
                                      {{/ifCond}}
                                      >Trạng thái hiện tại</label>
                                      <select class="form-control" name="status">
                                        <option value="1" {{#ifCond orderdetail.statusid '==' 1}}selected{{/ifCond}}>Đã giao</option>
                                        <option value="2" {{#ifCond orderdetail.statusid '==' 2}}selected{{/ifCond}}>Chưa giao</option>
                                        <option value="3" {{#ifCond orderdetail.statusid '==' 3}}selected{{/ifCond}}>Đang giao</option>
                                      </select>
                                    </div>
                                    <div class="form-group total">
                                          <h1 style="text-align: center;color:#d0021b;font-weight: 600;font-size: 30px;">Tổng tiền: {{fmNum orderdetail.total}}</h1>
                                      </div>
                            </div>
                            <!-- /.box-body -->
              
                            <div class="box-footer">
                              <button type="submit" class="btn btn-primary">Lưu lại thông tin đơn hàng</button>
                            </div>
                          </form>
                        </div>

                </div>
            <div class="row">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Danh sách sản phẩm đặt mua</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                      <div class="col-sm-6"></div>
                      <div class="col-sm-6"></div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                          <thead>
                            <tr role="row">
                              <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1"
                                colspan="1" aria-label="Browser: activate to sort column ascending">Mã SP</th>
                              <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                                aria-label="Platform(s): activate to sort column ascending">Tên sản phẩm</th>
                              <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                                aria-label="CSS grade: activate to sort column ascending">Giá</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                                aria-label="CSS grade: activate to sort column ascending">Số lượng</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                                aria-label="CSS grade: activate to sort column ascending">Tổng tiền</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each products}}
                              <tr role="row" class="even">
                                  <td class="sorting_1">{{this.product_id}}</td>
                                  <td>{{this.product_name}}</td>
                                  <td>
                                      <span class="label label-success">{{this.buying_price}}</span>
                                  </td>
                                  <td>{{this.quantity}}</td>
                                  <td>
                                      <span class="label label-primary">{{total this.buying_price quantity}}</span>
                                  </td>
                                </tr>
                               {{/each}}
                          </tbody>
                          <tfoot>
                            <tr>
                              <th rowspan="1" colspan="1">Mã SP</th>
                              <th rowspan="1" colspan="1">Tên Sản phẩm</th>
                              <th rowspan="1" colspan="1">Giá</th>
                              <th rowspan="1" colspan="1">Số lượng</th>
                              <th rowspan="1" colspan="1">Tổng tiền</th>
                            </tr>
                          </tfoot>
                        </table>
                      </div>
                    </div>
                    
                  </div>
                </div>
                <!-- /.box-body -->
              </div>
            </div>
          </div>