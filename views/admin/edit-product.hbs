<form role="form" action="" method="POST" enctype="multipart/form-data">
  <div class="col-md-12 row">
    <div class="col-md-8">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Sửa sản phẩm</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
           <div class="form-group">
            <label for="exampleInputEmail1">ID</label>
            <input value="{{product.id}}" disabled type="text" required name="name" class="form-control" placeholder="Nhập tên sản phẩm">
            <input value="{{product.id}}" type="hidden" name="id">
          </div>
          <div class="form-group">
            <label>Loại sản phẩm</label>
            <select class="form-control" name="cate">
              {{{catelist}}}
            </select>
          </div>
          <div class="form-group">
            <label>Nhà sản xuất</label>
            <select class="form-control" name="brand">
              {{{brandlist}}}
            </select>
            <p class="help-block">Nếu nhà sản xuất chưa có loại sản phẩm đã chọn sẽ tự thêm.</p>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Tên sản phẩm</label>
            <input value="{{product.name}}" type="text" required name="name" class="form-control" placeholder="Nhập tên sản phẩm">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Giá tiền</label>
            <input value="{{product.price}}" type="number" required value="0" min="0" name="price" class="form-control" placeholder="Nhập số tiền">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Giá giảm</label>
            <input value="{{product.discount}}" type="number" value="0" min="0" name="discountvalue" class="form-control" placeholder="Nhập số tiền giảm">
            <p class="help-block">Dưới 100 sẽ hiểu là theo %. Ngược lại là số tiền.</p>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Số lượng hàng</label>
            <input value="{{product.quantity}}" type="number" required value="0" min="0" name="inventory" class="form-control" placeholder="Nhập số lượng hàng">
          </div>
          {{#if product.image}}
          <div class="form-group">
            <label for="exampleInputFile">Ảnh thumbnail hiện tại</label>
            <br>
            <img src="{{product.image}}" height="100" width="auto" alt="">
            <input type="hidden" name="currentThumb" value="{{product.image}}">
            <a href="/admin/product/deletethumb/{{product.id}}">Xoá ảnh</a>
          </div>
          {{else}}
          <div class="form-group">
            <label for="exampleInputFile">Ảnh thumbnail</label>
            <input type="file" name="productimg">
            <p class="help-block">Ảnh thumbnail hiển thị ở trang chủ hoặc trang ngành hàng.</p>
          </div>
          {{/if}}
          
          <div class="form-group">
            <label class=" control-label">Mô tả sản phẩm</label>
            <textarea name="description" class="textarea" placeholder="Thông tin mô tả sản phẩm" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{product.description}}</textarea>
          </div>
          <div class="form-group">
            <label class="control-label">Ẩn/hiện sản phẩm</label>
            <div class="bs-example">
              <div class="make-switch" data-on="primary" data-off="info">
                {{#if product.hide}}
                <input type="checkbox" name="checkbox" checked>
                {{else}}
                <input type="checkbox" name="checkbox">
                {{/if}}
              </div>
            </div>

          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <button type="submit" class="btn btn-primary">Lưu lại sản phẩm</button>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">Hình chi tiết sản phẩm</h3>
          <p class="help-block">Tối đa 3 ảnh.</p>
        </div>
        <div class="box-body">
          {{#each images}}
              <div class="form-group">
                <label for="exampleInputFile">Ảnh sản phẩm</label>
                <br>
                <img src="{{this.image}}" height="100" width="auto" alt="">
                <a href="/admin/product/deleteimg/{{this.id}}">Xoá ảnh</a>
              </div>
          {{/each}}

          {{#for numLeft}}
          <div class="form-group">
            <label for="exampleInputFile">Ảnh sản phẩm</label>
            <input type="file" name="productimg">
          </div>
          {{/for}}
        </div>
        <!-- /.box-body -->
      </div>
    </div>
  </div>

</form>