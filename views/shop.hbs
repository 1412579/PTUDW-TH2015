	<div class="home">
		<div class="home_background parallax-window" data-parallax="scroll" data-image-src="/images/shop_background.jpg"></div>
		<div class="home_overlay"></div>
		<div class="home_content d-flex flex-column align-items-center justify-content-center">
			<h2 class="home_title">Ba Lô và Túi Xách</h2>
		</div>
	</div>

	<!-- Shop -->

	<div class="shop">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">

					<!-- Shop Sidebar -->
					<div class="shop_sidebar">
						<div class="sidebar_section">
							<div class="sidebar_title">Danh mục</div>
							{{#each categories}}
								<div class="sidebar_subtitle brands_subtitle">{{this.name}}</div>
								<ul class="sidebar_categories">
								{{#each this.children}}
									{{#ifCond ../../selectedCateId '==' this.id}}
										<li><a href="/products?subCategoryId={{this.id}}" class="category selected" data-id={{this.id}}>{{this.name}}</a></li>
									{{else}}
										<li><a href="/products?subCategoryId={{this.id}}">{{this.name}}</a></li>
									{{/ifCond}}
										{{!-- <li><a href="/products/{{this.id}}">{{this.name}}</a></li>
									{{/ifCond}} --}}
									
									
								{{/each}}
								</ul>

							{{/each}}
						</div>
						<div class="sidebar_section">
							<div class="sidebar_subtitle brands_subtitle">Thương hiệu</div>
							<ul class="brands_list">
								{{#each brands}}
									{{#ifCond ../selectedBrandId '==' this.id}}
									<li class="brand selected" data-id={{this.id}}><a href="/products?subCategoryId={{../selectedCateId}}&brandId={{this.id}}">{{this.name}}</a></li>
									{{else}}
									<li class="brand"><a href="/products?subCategoryId={{../selectedCateId}}&brandId={{this.id}}">{{this.name}}</a>									
									{{/ifCond}}
								{{/each}}
							</ul>
						</div>
					</div>

				</div>

				<div class="col-lg-9">
					
					<!-- Shop Content -->

					<div class="shop_content">
						<div class="shop_bar clearfix">
							<div class="shop_product_count"><span>{{numberOfProducts}}</span> Sản phẩm được tìm</div>
							<div class="shop_sorting">
								<span>Sắp xếp:</span>
								<ul>
									<li>
										<span class="sorting_text">Đánh giá<i class="fas fa-chevron-down"></span></i>
										<ul>
											<li class="shop_sorting_button" data-isotope-option='{ "sortBy": "original-order" }'>Đánh giá</li>
											<li class="shop_sorting_button" data-isotope-option='{ "sortBy": "name" }'>Tên</li>
											<li class="shop_sorting_button"data-isotope-option='{ "sortBy": "price" }'>Giá</li>
										</ul>
									</li>
								</ul>
							</div>
						</div>


						<div class="product_grid" id="all_products" data-from-searching={{isFromSearching}}>
							<div class="product_grid_border"></div>
							{{#each products}}

								<div class="product_item is_new">
									<div class="product_border"></div>
									<div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="{{this.photo}}" alt=""></div>
									<div class="product_content">
										<div class="product_price">{{this.price}} đ</div>
										<div class="product_name"><div><a href="/product/{{this.id}}" tabindex="0">{{this.name}}</a></div></div>
									</div>
									<div class="product_fav"><i class="fas fa-heart"></i></div>
									<button class="btn" style="margin-top: 20px; background: #0e8ce4; color: #FFFFFF;">Thêm vào giỏ</button>
								</div>
							{{/each}}
							
						</div>


						<nav aria-label="Page navigation example" class="shop_page_nav" id="shop_pagination" data-total = {{numberOfProducts}}>
						  <ul class="pagination justify-content-center">
						  </ul>
						</nav>
					</div>

				</div>
			</div>
		</div>
	</div>

