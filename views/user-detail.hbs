<link rel="stylesheet" type="text/css" href="/user/styles/product_styles.css">
<link rel="stylesheet" type="text/css" href="/user/styles/product_responsive.css">
<link rel="stylesheet" type="text/css" href="/user/plugins/select2/dist/css/select2.min.css">

    <div class="single_product">
        <div id="content" class="clearfix">

            <div class="container">

                <div class="row">

                    <!-- *** LEFT COLUMN ***
             _________________________________________________________ -->

                    <div class="col-md-9 clearfix" id="customer-account">

                        <h3>Thay đổi thông tin cá nhân và mật khẩu</h3>


                        <div class="box">

                            <div class="heading">
                                <h3 class="text-uppercase">Đổi mật khẩu</h3>
                            </div>

                            <form>
                                <input type="hidden" id="userId" name="userId" value="{{user.id}}">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="password_old">Mật khẩu cũ</label>
                                            <input type="password" class="form-control" id="password_old" placeholder="Mật khẩu cũ">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="password_1">Mật khẩu mới</label>
                                            <input type="password" class="form-control" id="password_1" placeholder="Mật khẩu mới">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="password_2">Nhập lại mật khẩu mới</label>
                                            <input type="password" class="form-control" id="password_2" placeholder="Nhập lại mật khẩu mới">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i><span>&ensp;Lưu mật khẩu</span></button>
                                </div>
                            </form>

                        </div>
                        <!-- /.box -->


                        <div class="box clearfix">
                            <div class="heading">
                                <h3 class="text-uppercase">Thông tin cá nhân</h3>
                            </div>

                            <form action="/user/detail" method="post">
                                <input type="hidden" id="userId" name="id" value="{{user.id}}">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="firstname">Họ tên</label>
                                            <input type="text" class="form-control" id="fullname" placeholder="Họ tên" value="{{user.fullname}}" name="fullname">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="lastname">Email</label>
                                            <input type="text" class="form-control" id="email" placeholder="Email" value="{{user.email}}" name="email">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->

                                <div class="row">
                                    <div class="col-sm-6">
                                      <div class="form-group">
                                        <label for="gender">Giới tính</label>
                                        <div class="row col-form-label">
                                          <div class="col-sm-6">
                                            <label class="custom-control custom-radio">
                                            {{#ifCond user.sexual "==" "male"}}
                                                <input name="sexual" type="radio" class="custom-control-input" checked="checked" value="male">
                                            {{else}}
                                                <input name="sexual" type="radio" class="custom-control-input" value="male">
                                            {{/ifCond}}
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description" style="font-weight: normal;">Nam</span>
                                          </label>
                                            <!-- <input type="radio" name="options" id="option1" autocomplete="off" checked>  -->
                                          </div>
                                          <div class="col-sm-6">
                                            <label class="custom-control custom-radio">
                                            {{#ifCond user.sexual "==" "female"}}
                                                <input name="sexual" type="radio" class="custom-control-input" checked="checked" value="female">
                                            {{else}}
                                                <input name="sexual" type="radio" class="custom-control-input" value="female">
                                            {{/ifCond}}
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description" style="font-weight: normal;">Nữ</span>
                                          </label>
                                            <!-- <input type="radio" name="options" id="option1" autocomplete="off" checked> Nữ -->
                                          </div>
                                        </div>
                                        
                                      </div>

                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="street">Ngày sinh</label>
                                            <input class="form-control datepicker" id="dob" placeholder="Ngày sinh" value="{{user.birth}}" name="birth">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->

                                <div class="row">


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="address">Địa chỉ</label>
                                            <input type="text" class="form-control" id="address" placeholder="Địa chỉ" value="{{user.address}}" name="address">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="city">Tỉnh/Thành phố</label>
                                            <select class="form-control" id="city" name="province">
                                                 <option value="{{user.province}}" selected="selected">{{user.province}}</option>
                                            </select>
                                            {{!-- <input type="text" class="form-control" id="city" placeholder="Thành phố" value="{{user.province}}"> --}}
                                        </div>
                                    </div>
                                    <div class="col-sm-12 text-center">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&ensp;Lưu thay đổi</button>

                                    </div>

                                </div>

                            </form>

                        </div>

                    </div>
                    {{> user}}

                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->
        </div>
        <!-- /#content -->

    </div>

{{#section 'scripts'}}
    <script src="/user/js/Thi/user.js"></script>
    <script src="/user/plugins/select2/dist/js/select2.full.min.js"></script>
{{/section}}

