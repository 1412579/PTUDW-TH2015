{{!-- {{#if noProducts}} --}}
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        Không có sản phẩm thoả yêu cầu.
    </div>
</div>
{{!-- {{else}} --}}
<div class="row">
    {{#each products}}
    <div class="product_item">
        <div class="product_border"></div>
        <div class="product_image d-flex flex-column align-items-center justify-content-center">
            <img src="/user/images/category/bag/bag_for_female/bag_for_female_1_id07.jpg" alt="">
        </div>
        <div class="product_content">
            <div class="product_price">439,000 đ
                <span>500,000 đ</span>
            </div>
            <div class="product_name">
                <div>
                    <a href="/product.html" tabindex="0">Balo nữ dây rút H227 - Đen</a>
                </div>
            </div>
        </div>
        <div class="product_fav">
            <i class="fas fa-heart"></i>
        </div>
        <ul class="product_marks">
            <li class="product_mark product_discount">-25%</li>
        </ul>
    </div>


    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="/imgs/sp/{{ProID}}/main_thumbs.jpg" alt="{{ProName}}" title="{{ProName}}">
            <div class="caption">
                <h4>{{ProName}}</h4>
                <h4>{{number_format Price}}</h4>
                <p style="min-height: 60px">{{TinyDes}}</p>
                <p>
                    <a href="#" class="btn btn-primary" role="button">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        Details
                    </a>
                    <a href="#" class="btn btn-danger" role="button">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                    </a>
                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<ul class="pagination">
    <li class="disabled">
        <a href="#" aria-label="Previous">
            <span aria-hidden="true">«</span>
        </a>
    </li>
    {{#each page_numbers}} {{#if isCurPage}}
    <li class="active">
        <a href="javascript:;">{{value}}</a>
    </li>
    {{else}}
    <li>
        <a href="?page={{value}}">{{value}}</a>
    </li>
    {{/if}} {{/each}}
    <li>
        <a href="#" aria-label="Next">
            <span aria-hidden="true">»</span>
        </a>
    </li>
</ul>
</nav>