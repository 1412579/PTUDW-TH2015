	<div class="single_product">
		<div class="container">
			<div class="row">

				<!-- Images -->
				<div class="col-lg-2 order-lg-1 order-2">
					<ul class="image_list">
						<li data-image="/images/single_4.jpg"><img src="{{photos.0.url}}" alt=""></li>
						<li data-image="/images/single_2.jpg"><img src="{{photos.1.url}}" alt=""></li>
						<li data-image="/images/single_3.jpg"><img src="{{photos.2.url}}" alt=""></li>
					</ul>
				</div>

				<!-- Selected Image -->
				<div class="col-lg-5 order-lg-2 order-1">
					<div class="image_selected"><img src="{{product.main_picture}}" alt=""></div>
				</div>

				<!-- Description -->
				<div class="col-lg-5 order-3">
					<div class="product_description">
						<div class="product_category" style="font-size: 30px;">{{product.category}} <small><i class="fas fa-angle-double-right sub-cate" ></i></small> {{product.type}}</div>
						<div class="product_name">{{product.name}}</div>
						<div class="row sub-header">
					        <div class="col-lg-6 col-md-6">
					            <div>Nhà sản xuất: {{product.brand}}</div>
					        </div>
					        <div class="col-lg-6 col-md-6">
					            <div>Xuất xứ:  {{product.origin}}</div>
					        </div>
					    </div>
						<div class="product_text"><p>{{product.description}}</p></div>
						<div class="sub-header"><p><i class="fas fa-eye"></i>    {{product.view}}</p></div>
						<div class="order_info d-flex flex-row" style="margin-top: 20px;">
							<form action="#">
								<div class="product_price" style="margin-bottom: 50px; margin-top: 20px;">{{product.price}} VND</div>
								<div class="clearfix" style="z-index: 1000;">

									<!-- Product Quantity -->
									<div class="product_quantity clearfix">
										<span>Số lượng: </span>
										<input id="quantity_input" type="text" pattern="[0-9]*" value="1">
										<div class="quantity_buttons">
											<div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
											<div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
										</div>
									</div>

									<div class="product-color no-width" style="border:0px;">
										<button type="button" class="custom-button button cart_button"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</button>
									</div>
									
								</div>

							</form>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

	<!-- Recently Viewed -->

	<div class="viewed">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="viewed_title_container">
						<h3 class="viewed_title">Sản phẩm cùng loại</h3>
						<div class="viewed_nav_container">
							<div class="viewed_nav viewed_prev"><i class="fas fa-chevron-left"></i></div>
							<div class="viewed_nav viewed_next"><i class="fas fa-chevron-right"></i></div>
						</div>
					</div>

					<div class="viewed_slider_container">
						
						<!-- Recently Viewed Slider -->

						<div class="owl-carousel owl-theme viewed_slider">
							{{> product-slide sameTypeProducts}}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="viewed">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="viewed_title_container">
						<h3 class="viewed_title">Sản phẩm cùng nhà sản xuất</h3>
						<div class="viewed_nav_container">
							<div class="viewed_nav brand_prev"><i class="fas fa-chevron-left"></i></div>
							<div class="viewed_nav brand_next"><i class="fas fa-chevron-right"></i></div>
						</div>
					</div>

					<div class="viewed_slider_container">
						
						<!-- Recently Viewed Slider -->

						<div class="owl-carousel owl-theme brand_slider">
							{{> product-slide sameBrandProducts}}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>